-- PICKAXE SIMULATOR
-- FAST HATCH VISUAL (SERVER SAFE)

local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- HAPUS UI HATCH
local function removeHatchUI()
    local gui = Player:FindFirstChild("PlayerGui")
    if not gui then return end

    for _,v in pairs(gui:GetDescendants()) do
        if v:IsA("ScreenGui") or v:IsA("Frame") then
            local n = v.Name:lower()
            if n:find("egg") or n:find("hatch") or n:find("open") then
                v.Enabled = false
                v.Visible = false
            end
        end
    end
end

-- PERCEPAT CAMERA & EFFECT
local function speedVisual()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("Camera") then
            v.FieldOfView = 90
        end
    end
end

-- LOOP
task.spawn(function()
    while task.wait(0.1) do
        pcall(removeHatchUI)
        pcall(speedVisual)
    end
end)

-- NOTIFIKASI
game.StarterGui:SetCore("SendNotification",{
    Title = "FAST HATCH VISUAL",
    Text = "Animasi disembunyikan (SERVER SAFE)",
    Duration = 5
})
