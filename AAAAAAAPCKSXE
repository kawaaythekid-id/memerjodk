-- NO MINING ANIMATION (HARD VISUAL BYPASS)
-- Pickaxe Simulator
-- LocalScript

local player = game.Players.LocalPlayer

local function applyNoAnim(char)
	local humanoid = char:WaitForChild("Humanoid",5)
	if not humanoid then return end

	-- MATIKAN Animator
	local animator = humanoid:FindFirstChildOfClass("Animator")
	if animator then
		animator:Destroy()
	end

	-- JAGA AGAR TIDAK BALIK
	humanoid.DescendantAdded:Connect(function(d)
		if d:IsA("Animator") then
			task.wait()
			d:Destroy()
		end
	end)

	-- STOP SEMUA ANIMASI
	task.spawn(function()
		while task.wait(0.1) do
			for _,track in pairs(humanoid:GetPlayingAnimationTracks()) do
				pcall(function()
					track:Stop(0)
				end)
			end
		end
	end)
end

-- APPLY SAAT SPAWN
if player.Character then
	applyNoAnim(player.Character)
end

player.CharacterAdded:Connect(applyNoAnim)
