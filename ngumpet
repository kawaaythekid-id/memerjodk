-- LocalScript untuk fitur bersembunyi di tanah dengan kedalaman yang dapat diatur via TextBox
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Variabel lokal
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local humanoid = character:WaitForChild("Humanoid")
local isHidden = false
local originalCFrame = nil
local originalCanCollide = {}
local originalTransparency = {}
local isProcessing = false -- Untuk mencegah spam klik
local hideDepth = -2.5 -- Kedalaman default

-- Membuat GUI untuk kontrol
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui
screenGui.Name = "HideControlGui"
screenGui.ResetOnSpawn = false -- Mencegah GUI hilang saat respawn

-- Frame utama untuk tombol
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 150, 0, 250) -- Diperbesar untuk menampung TextBox
mainFrame.Position = UDim2.new(0, 10, 0, 10) -- Kiri atas
mainFrame.BackgroundTransparency = 0.5
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
mainFrame.Parent = screenGui
mainFrame.ClipsDescendants = true

-- Tombol On/Off
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0, 25, 0, 40)
toggleButton.Text = "Hide"
toggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Parent = mainFrame

-- TextBox untuk mengatur kedalaman
local depthTextBox = Instance.new("TextBox")
depthTextBox.Size = UDim2.new(0, 100, 0, 30)
depthTextBox.Position = UDim2.new(0, 25, 0, 100)
depthTextBox.Text = tostring(hideDepth) -- Default kedalaman
depthTextBox.PlaceholderText = "Enter depth (e.g. -2.5)"
depthTextBox.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
depthTextBox.TextColor3 = Color3.fromRGB(0, 0, 0)
depthTextBox.Parent = mainFrame

-- Tombol Minimize
local minimizeButton = Instance.new("TextButton")
minimizeButton.Size = UDim2.new(0, 30, 0, 30)
minimizeButton.Position = UDim2.new(0, 110, 0, 0)
minimizeButton.Text = "-"
minimizeButton.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
minimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
minimizeButton.Parent = mainFrame

-- Tombol Close (X)
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(0, 0, 0, 0)
closeButton.Text = "X"
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Parent = mainFrame

-- Fungsi untuk validasi input TextBox
local function updateDepth()
    local input = depthTextBox.Text
    local number = tonumber(input)
    if number and number <= 0 and number >= -5 then -- Batasi kedalaman antara 0 dan -5
        hideDepth = number
    else
        depthTextBox.Text = tostring(hideDepth) -- Kembalikan ke nilai sebelumnya jika invalid
    end
end

-- Event untuk TextBox saat input berubah
depthTextBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        updateDepth()
    end
end)

-- Fungsi untuk menyimpan status CanCollide dan Transparency
local function saveCollisionAndTransparencyState()
    originalCanCollide = {}
    originalTransparency = {}
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            originalCanCollide[part] = part.CanCollide
            originalTransparency[part] = part.Transparency
        end
    end
end

-- Fungsi untuk mengembalikan status CanCollide dan Transparency
local function restoreCollisionAndTransparencyState()
    for part, canCollide in pairs(originalCanCollide) do
        if part and part.Parent then
            part.CanCollide = canCollide
            part.Transparency = originalTransparency[part] or 0
        end
    end
end

-- Fungsi untuk mempertahankan posisi saat bersembunyi
local connection
local function maintainHiddenPosition()
    if connection then
        connection:Disconnect()
    end
    if isHidden then
        connection = RunService.Heartbeat:Connect(function()
            if isHidden and humanoidRootPart and humanoid and humanoid.Health > 0 then
                humanoidRootPart.Velocity = Vector3.new(0, 0, 0) -- Set velocity ke 0
                humanoidRootPart.CFrame = originalCFrame * CFrame.new(0, hideDepth, 0) -- Pertahankan posisi
            end
        end)
    end
end

-- Fungsi untuk menyembunyikan pemain
local function hidePlayer()
    if isProcessing or not character or not humanoidRootPart or not humanoid or humanoid.Health <= 0 then
        return
    end
    isProcessing = true

    if not isHidden then
        isHidden = true
        originalCFrame = humanoidRootPart.CFrame
        saveCollisionAndTransparencyState()

        -- Nonaktifkan collision dan buat karakter invisible
        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
                part.Transparency = 1 -- Buat invisible
            end
        end

        -- Nonaktifkan hitbox serangan dan buat pemain tidak bisa dibunuh
        humanoid:SetStateEnabled(Enum.HumanoidStateType.GettingUp, false)
        humanoid:SetStateEnabled(Enum.HumanoidStateType.Ragdoll, false)
        humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, false)
        humanoid:SetStateEnabled(Enum.HumanoidStateType.Physics, false)
        humanoid.PlatformStand = true
        humanoid.WalkSpeed = 0
        humanoid.JumpPower = 0

        -- Pindahkan pemain ke dalam tanah secara instan
        humanoidRootPart.CFrame = originalCFrame * CFrame.new(0, hideDepth, 0)
        humanoidRootPart.Anchored = true -- Anchor untuk mencegah pergerakan

        -- Mulai loop maintain posisi
        maintainHiddenPosition()

        -- Ubah teks tombol
        toggleButton.Text = "Show"
        toggleButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    else
        isHidden = false
        restoreCollisionAndTransparencyState()

        -- Kembalikan ke posisi asli secara instan
        humanoidRootPart.Anchored = false
        humanoidRootPart.CFrame = originalCFrame

        -- Aktifkan kembali hitbox dan gerakan
        humanoid:SetStateEnabled(Enum.HumanoidStateType.GettingUp, true)
        humanoid:SetStateEnabled(Enum.HumanoidStateType.Ragdoll, true)
        humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, true)
        humanoid:SetStateEnabled(Enum.HumanoidStateType.Physics, true)
        humanoid.PlatformStand = false
        humanoid.WalkSpeed = 16
        humanoid.JumpPower = 50

        -- Hentikan loop maintain
        if connection then
            connection:Disconnect()
            connection = nil
        end

        -- Ubah teks tombol
        toggleButton.Text = "Hide"
        toggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    end

    -- Reset isProcessing setelah selesai
    RunService.Heartbeat:Wait()
    isProcessing = false
end

-- Fungsi untuk minimize/maximize GUI
local isMinimized = false
local function toggleMinimize()
    if not isMinimized then
        mainFrame.Size = UDim2.new(0, 50, 0, 50)
        toggleButton.Visible = false
        depthTextBox.Visible = false
        minimizeButton.Text = "+"
        isMinimized = true
    else
        mainFrame.Size = UDim2.new(0, 150, 0, 250)
        toggleButton.Visible = true
        depthTextBox.Visible = true
        minimizeButton.Text = "-"
        isMinimized = false
    end
end

-- Fungsi untuk menutup GUI
local function closeGui()
    if isHidden then
        hidePlayer() -- Keluar dari mode hide sebelum menutup
    end
    screenGui:Destroy()
    if connection then
        connection:Disconnect()
        connection = nil
    end
end

-- Logika untuk drag-and-drop GUI
local dragging = false
local dragStart = nil
local startPos = nil

UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if gameProcessedEvent then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        local position = input.Position
        local guiPosition = mainFrame.AbsolutePosition
        local guiSize = mainFrame.AbsoluteSize
        if position.X >= guiPosition.X and position.X <= guiPosition.X + guiSize.X and
           position.Y >= guiPosition.Y and position.Y <= guiPosition.Y + guiSize.Y then
            dragging = true
            dragStart = position
            startPos = mainFrame.Position
        end
    end
end)

UserInputService.InputChanged:Connect(function(input, gameProcessedEvent)
    if gameProcessedEvent then return end
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - dragStart
        local newPos = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
        mainFrame.Position = newPos
    end
end)

UserInputService.InputEnded:Connect(function(input, gameProcessedEvent)
    if gameProcessedEvent then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

-- Event untuk tombol
toggleButton.MouseButton1Click:Connect(hidePlayer)
minimizeButton.MouseButton1Click:Connect(toggleMinimize)
closeButton.MouseButton1Click:Connect(closeGui)

-- Mengatur ulang saat karakter respawn
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    humanoid = character:WaitForChild("Humanoid")
    isHidden = false
    isProcessing = false
    toggleButton.Text = "Hide"
    toggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    
    -- Pastikan state kembali normal saat respawn
    humanoid:SetStateEnabled(Enum.HumanoidStateType.GettingUp, true)
    humanoid:SetStateEnabled(Enum.HumanoidStateType.Ragdoll, true)
    humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, true)
    humanoid:SetStateEnabled(Enum.HumanoidStateType.Physics, true)
    humanoid.PlatformStand = false
    humanoid.WalkSpeed = 16
    humanoid.JumpPower = 50
    humanoidRootPart.Anchored = false
    
    -- Hentikan loop jika ada
    if connection then
        connection:Disconnect()
        connection = nil
    end
end)

-- Menangani bug jika karakter mati saat bersembunyi
humanoid.Died:Connect(function()
    if isHidden then
        isHidden = false
        toggleButton.Text = "Hide"
        toggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        isProcessing = false
        if connection then
            connection:Disconnect()
            connection = nil
        end
    end
end)
