-- LocalScript: HideInGround -- Letakkan script ini di: StarterPlayer > StarterPlayerScripts -- Fungsi: membuat UI untuk masuk/sembunyi ke dalam tanah langsung (tanpa delay) -- Fitur: TextBox untuk atur kedalaman, tombol ON/OFF (warna berbeda), tombol minimize (+ untuk munculkan kembali), tombol X untuk hapus GUI

local Players = game:GetService("Players") local player = Players.LocalPlayer local starterGui = game:GetService("StarterGui") local RunService = game:GetService("RunService")

-- UI buat otomatis local screenGui = Instance.new("ScreenGui") screenGui.Name = "HideInGroundGUI" screenGui.ResetOnSpawn = false screenGui.Parent = player:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame") mainFrame.Name = "MainFrame" mainFrame.Size = UDim2.new(0, 260, 0, 120) mainFrame.Position = UDim2.new(0, 20, 0, 20) mainFrame.BackgroundColor3 = Color3.fromRGB(30,30,30) mainFrame.BorderSizePixel = 0 mainFrame.Parent = screenGui mainFrame.Active = true mainFrame.Draggable = true

local title = Instance.new("TextLabel") title.Name = "Title" title.Size = UDim2.new(1, 0, 0, 30) title.BackgroundTransparency = 1 title.Text = "Sembunyi Tanah" title.TextColor3 = Color3.fromRGB(255,255,255) title.Font = Enum.Font.SourceSansBold title.TextSize = 18 title.Parent = mainFrame

-- Depth label + textbox local depthLabel = Instance.new("TextLabel") depthLabel.Size = UDim2.new(0, 120, 0, 28) depthLabel.Position = UDim2.new(0, 8, 0, 36) depthLabel.BackgroundTransparency = 1 depthLabel.Text = "Kedalaman (meter):" depthLabel.TextColor3 = Color3.fromRGB(230,230,230) depthLabel.TextSize = 14 depthLabel.Font = Enum.Font.SourceSans depthLabel.TextXAlignment = Enum.TextXAlignment.Left depthLabel.Parent = mainFrame

local depthBox = Instance.new("TextBox") depthBox.Name = "DepthBox" depthBox.Size = UDim2.new(0, 120, 0, 28) depthBox.Position = UDim2.new(0, 130, 0, 36) depthBox.BackgroundColor3 = Color3.fromRGB(50,50,50) depthBox.TextColor3 = Color3.fromRGB(255,255,255) depthBox.ClearTextOnFocus = false depthBox.Text = "3" -- default 3 meter depthBox.Font = Enum.Font.SourceSans depthBox.TextSize = 14 depthBox.Parent = mainFrame

-- On/Off Button local toggleBtn = Instance.new("TextButton") toggleBtn.Name = "ToggleBtn" toggleBtn.Size = UDim2.new(0, 120, 0, 28) toggleBtn.Position = UDim2.new(0, 8, 0, 72) toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50) -- OFF merah toggleBtn.TextColor3 = Color3.fromRGB(255,255,255) toggleBtn.Text = "OFF" toggleBtn.Font = Enum.Font.SourceSansBold toggleBtn.TextSize = 16 toggleBtn.Parent = mainFrame

-- Minimize button local minimizeBtn = Instance.new("TextButton") minimizeBtn.Name = "MinimizeBtn" minimizeBtn.Size = UDim2.new(0, 28, 0, 28) minimizeBtn.Position = UDim2.new(1, -34, 0, 4) minimizeBtn.Text = "_" minimizeBtn.Font = Enum.Font.SourceSansBold minimizeBtn.TextSize = 18 minimizeBtn.BackgroundColor3 = Color3.fromRGB(80,80,80) minimizeBtn.TextColor3 = Color3.fromRGB(255,255,255) minimizeBtn.Parent = mainFrame

-- Close (X) button local closeBtn = Instance.new("TextButton") closeBtn.Name = "CloseBtn" closeBtn.Size = UDim2.new(0, 28, 0, 28) closeBtn.Position = UDim2.new(1, -68, 0, 4) closeBtn.Text = "X" closeBtn.Font = Enum.Font.SourceSansBold closeBtn.TextSize = 18 closeBtn.BackgroundColor3 = Color3.fromRGB(140,40,40) closeBtn.TextColor3 = Color3.fromRGB(255,255,255) closeBtn.Parent = mainFrame

-- Plus (restore) button (hidden initially) local plusBtn = Instance.new("TextButton") plusBtn.Name = "PlusBtn" plusBtn.Size = UDim2.new(0, 36, 0, 36) plusBtn.Position = UDim2.new(0, 20, 0, 20) plusBtn.Text = "+" plusBtn.Font = Enum.Font.SourceSansBold plusBtn.TextSize = 20 plusBtn.BackgroundColor3 = Color3.fromRGB(70,70,70) plusBtn.TextColor3 = Color3.fromRGB(255,255,255) plusBtn.Parent = screenGui plusBtn.Visible = false

-- State local isHidden = false local storedCFrame = nil local lastDepth = 3 local debounce = false

-- Utility: parse depth from textbox local function parseDepth(text) local n = tonumber(text) if not n then return nil end -- clamp reasonable values if n < 0.25 then n = 0.25 end if n > 100 then n = 100 end return n end

-- Function to perform hide/unhide immediately local function setHidden(hide) if debounce then return end debounce = true local char = player.Character or player.CharacterAdded:Wait() local hrp = char:FindFirstChild("HumanoidRootPart") local humanoid = char:FindFirstChildOfClass("Humanoid") if not hrp then debounce = false return end

local depth = parseDepth(depthBox.Text) or lastDepth
lastDepth = depth

if hide then
	-- store original CFrame
	storedCFrame = hrp.CFrame
	-- teleport langsung ke bawah (tanpa delay)
	hrp.CFrame = hrp.CFrame * CFrame.new(0, -depth, 0)
	-- optional: set humanoid state agar tidak jatuh/bergelinding (tetap bisa disesuaikan)
	if humanoid then
		humanoid.PlatformStand = true
	end
	isHidden = true
	toggleBtn.BackgroundColor3 = Color3.fromRGB(60,180,75) -- ON warna hijau
	toggleBtn.Text = "ON"
else
	-- restore original position jika ada
	if storedCFrame then
		hrp.CFrame = storedCFrame
		storedCFrame = nil
	end
	if humanoid then
		humanoid.PlatformStand = false
	end
	isHidden = false
	toggleBtn.BackgroundColor3 = Color3.fromRGB(200,50,50) -- OFF merah
	toggleBtn.Text = "OFF"
end
debounce = false

end

-- Toggle button click toggleBtn.MouseButton1Click:Connect(function() local depth = parseDepth(depthBox.Text) if depth then lastDepth = depth else -- jika input tidak valid, kembalikan value textbox ke lastDepth depthBox.Text = tostring(lastDepth) end setHidden(not isHidden) end)

-- Minimize: sembunyikan mainFrame, tampilkan plusBtn minimizeBtn.MouseButton1Click:Connect(function() mainFrame.Visible = false plusBtn.Visible = true end)

-- Plus: munculkan mainFrame plusBtn.MouseButton1Click:Connect(function() mainFrame.Visible = true plusBtn.Visible = false end)

-- Close: hapus GUI sepenuhnya closeBtn.MouseButton1Click:Connect(function() screenGui:Destroy() end)

-- Pastikan jika karakter respawn, state tetap konsisten (jika sedang hidden, apply lagi) player.CharacterAdded:Connect(function(char) -- kecilkan delay agar langsung apply saat spawn if isHidden then local hrp = char:WaitForChild("HumanoidRootPart", 3) if hrp and storedCFrame then hrp.CFrame = storedCFrame * CFrame.new(0, -lastDepth, 0) end end end)

-- Pastikan textbox hanya menerima angka (opsional: replace non-digit saat berubah) depthBox:GetPropertyChangedSignal("Text"):Connect(function() local text = depthBox.Text -- hilangkan karakter selain angka, titik, minus (meskipun minus tidak dipakai) local cleaned = text:gsub("[^%d%.]", "") -- hindari lebih dari satu titik local firstDot = cleaned:find(".", 1, true) if firstDot then local left = cleaned:sub(1, firstDot) local rest = cleaned:sub(firstDot + 1):gsub("%.", "") cleaned = left .. rest end if cleaned ~= text then depthBox.Text = cleaned end end)

-- Informasi singkat di tooltip (hover) mainFrame.MouseEnter:Connect(function() -- bisa ditambah jika dibutuhkan end)

-- Siap digunakan print("HideInGround GUI siap. Tekan ON untuk sembunyi dan OFF untuk kembali.")

