-- LocalScript (StarterPlayerScripts)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- GUI fling power
local flingPower = 50000 -- default super overpower

-- GUI optional (kalo mau atur manual pakai TextBox seperti sebelumnya)

-- Fungsi fling target
local function flingTarget(otherHRP)
    local randomDirection = Vector3.new(
        math.random(-flingPower, flingPower),
        math.random(flingPower, flingPower * 2),
        math.random(-flingPower, flingPower)
    )

    local bv = Instance.new("BodyVelocity")
    bv.Velocity = randomDirection
    bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
    bv.P = 1e9
    bv.Parent = otherHRP

    game:GetService("Debris"):AddItem(bv, 0.3)
end

-- Setup karakter
local function setupChar(char)
    local hrp = char:WaitForChild("HumanoidRootPart")

    hrp.Touched:Connect(function(hit)
        local otherChar = hit.Parent
        local otherPlayer = Players:GetPlayerFromCharacter(otherChar)

        -- pastikan ini player lain
        if otherPlayer and otherPlayer ~= LocalPlayer then
            local otherHRP = otherChar:FindFirstChild("HumanoidRootPart")
            if otherHRP then
                flingTarget(otherHRP)
                print("ðŸ’¥ " .. otherPlayer.Name .. " kena fling overpower!")
            end
        end
    end)
end

LocalPlayer.CharacterAdded:Connect(setupChar)
if LocalPlayer.Character then
    setupChar(LocalPlayer.Character)
end
