local player = game.Players.LocalPlayer
local ladderFolder = Instance.new("Folder", workspace)
ladderFolder.Name = "StaticLadders"

-- fungsi bikin versi statis
local function makeStatic(original)
    if not original:IsA("Model") then return end

    -- clone model
    local clone = original:Clone()
    clone.Parent = ladderFolder

    -- buang constraint / motor
    for _, obj in pairs(clone:GetDescendants()) do
        if obj:IsA("Constraint") or obj:IsA("Motor6D") or obj:IsA("Weld") then
            obj:Destroy()
        elseif obj:IsA("BasePart") then
            obj.Anchored = true
            obj.CanCollide = true
        end
    end

    -- sembunyikan aslinya
    for _, obj in pairs(original:GetDescendants()) do
        if obj:IsA("BasePart") then
            obj.LocalTransparencyModifier = 1
            obj.CanCollide = false
        end
    end
end

-- contoh: cari semua model yg namanya mengandung "Ladder"
for _, obj in pairs(workspace:GetDescendants()) do
    if obj:IsA("Model") and obj.Name:lower():find("ladder") then
        makeStatic(obj)
    end
end
