-- Bagian GUI di dalam LocalScript

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Name = "FreezeUI"
gui.Parent = player:WaitForChild("PlayerGui")

-- Panel utama
local panel = Instance.new("Frame")
panel.Size = UDim2.new(0, 180, 0, 120)
panel.Position = UDim2.new(0.05, 0, 0.7, 0)
panel.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
panel.BackgroundTransparency = 0.2
panel.BorderSizePixel = 0
panel.Parent = gui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = panel

local UIStroke = Instance.new("UIStroke")
UIStroke.Color = Color3.fromRGB(0, 170, 255)
UIStroke.Thickness = 2
UIStroke.Parent = panel

-- Judul
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 24)
title.Position = UDim2.new(0, 0, 0, 5)
title.BackgroundTransparency = 1
title.Text = "Freeze Tool"
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.Parent = panel

-- Tombol toggle
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0.9, 0, 0, 40)
toggleBtn.Position = UDim2.new(0.05, 0, 0.25, 0)
toggleBtn.Text = "Freeze: OFF"
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 18
toggleBtn.Parent = panel

local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = UDim.new(0, 8)
btnCorner.Parent = toggleBtn

-- Label radius
local radiusLabel = Instance.new("TextLabel")
radiusLabel.Size = UDim2.new(0.4, 0, 0, 30)
radiusLabel.Position = UDim2.new(0.05, 0, 0.7, 0)
radiusLabel.BackgroundTransparency = 1
radiusLabel.Text = "Radius:"
radiusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
radiusLabel.Font = Enum.Font.Gotham
radiusLabel.TextSize = 16
radiusLabel.TextXAlignment = Enum.TextXAlignment.Left
radiusLabel.Parent = panel

-- TextBox radius
local radiusBox = Instance.new("TextBox")
radiusBox.Size = UDim2.new(0.5, 0, 0, 30)
radiusBox.Position = UDim2.new(0.45, 0, 0.7, 0)
radiusBox.PlaceholderText = "12"
radiusBox.Text = "12"
radiusBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
radiusBox.TextColor3 = Color3.new(1, 1, 1)
radiusBox.ClearTextOnFocus = false
radiusBox.Font = Enum.Font.Gotham
radiusBox.TextSize = 16
radiusBox.Parent = panel

local radiusCorner = Instance.new("UICorner")
radiusCorner.CornerRadius = UDim.new(0, 6)
radiusCorner.Parent = radiusBox

-- === Animasi tombol saat diaktifkan/nonaktifkan ===
local enabled = false
local function setEnabled(state)
	enabled = state
	if enabled then
		toggleBtn.Text = "Freeze: ON"
		toggleBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
	else
		toggleBtn.Text = "Freeze: OFF"
		toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	end
end

toggleBtn.MouseButton1Click:Connect(function()
	setEnabled(not enabled)
end)

-- Export UI elements supaya bisa dipakai di script utama
return {
	Enabled = function() return enabled end,
	SetEnabled = setEnabled,
	RadiusBox = radiusBox,
}
