-- LocalScript freeze/unfreeze objek (Android only)

local player = game.Players.LocalPlayer

-- Buat GUI tombol
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FreezeGUI"
screenGui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 100)
button.Position = UDim2.new(0.5, -100, 0.8, 0)
button.Text = "Freeze OFF"
button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
button.TextScaled = true
button.Parent = screenGui

-- Atur target objek (ganti sesuai nama objekmu di workspace)
local object = workspace:WaitForChild("NamaObjek")

local isFrozen = false

-- Fungsi freeze/unfreeze
local function FreezeObject(obj, freeze)
	for _, part in pairs(obj:GetDescendants()) do
		if part:IsA("BasePart") then
			part.Anchored = freeze
			if freeze then
				part.Velocity = Vector3.new(0, 0, 0)
				part.RotVelocity = Vector3.new(0, 0, 0)
			end
		end
	end
end

-- Toggle ketika tombol ditekan
button.MouseButton1Click:Connect(function()
	isFrozen = not isFrozen
	if isFrozen then
		button.Text = "Freeze ON"
		button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
	else
		button.Text = "Freeze OFF"
		button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
	end

	FreezeObject(object, isFrozen)
end)
