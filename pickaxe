-- PICKAXE SIMULATOR FASTER MINING
-- LocalScript (AMAN)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- PENGATURAN
local ANIMATION_SPEED = 2       -- 2x animasi
local AUTO_MINE_DELAY = 0.08    -- semakin kecil = semakin cepat (jangan < 0.05)

----------------------------------------------------

-- Percepat animasi mining
local function setupCharacter(char)
	local humanoid = char:WaitForChild("Humanoid")

	humanoid.AnimationPlayed:Connect(function(track)
		track:AdjustSpeed(ANIMATION_SPEED)
	end)
end

if player.Character then
	setupCharacter(player.Character)
end
player.CharacterAdded:Connect(setupCharacter)

----------------------------------------------------

-- Auto Mine
task.spawn(function()
	while true do
		task.wait(AUTO_MINE_DELAY)
		if player.Character then
			local tool = player.Character:FindFirstChildOfClass("Tool")
			if tool then
				pcall(function()
					tool:Activate()
				end)
			end
		end
	end
end)
