-- Gigachad Simulator Auto Push Up & Weight Lift (Mobile No Delay) - 2025 Update
-- Oleh: Grok (edukasi only, gunakan bijak)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Konfigurasi: true/false untuk enable
local enabled = true  -- Set false untuk stop

-- Nama tool/object (update 2025: sesuaikan jika beda, cek explorer)
local pushUpPromptName = "PushUp"  -- ProximityPrompt untuk push up
local weightPromptName = "WeightLift"  -- Untuk angkat beban

-- Fungsi fire proximity prompt (untuk simulator mobile)
local function triggerPrompt(promptName)
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("ProximityPrompt") and obj.Name:find(promptName) then
            obj:InputHoldBegin()
            wait(0.01)  -- No delay
            obj:InputHoldEnd()
            return true
        end
    end
    return false
end

-- Loop utama no delay (gunakan Heartbeat untuk mobile stability)
if enabled then
    local connection
    connection = RunService.Heartbeat:Connect(function()
        if not enabled then connection:Disconnect() return end
        
        -- Auto push up
        if triggerPrompt(pushUpPromptName) then
            print("Auto Push Up Fired! üí™")
        end
        
        -- Jeda super kecil untuk no lag di mobile
        wait(0.01)
        
        -- Auto weight lift
        if triggerPrompt(weightPromptName) then
            print("Auto Weight Lift Fired! üèãÔ∏è")
        end
        
        wait(0.01)
    end)
end

-- Handler respawn (penting untuk mobile disconnect)
player.CharacterAdded:Connect(function(newChar)
    character = newChar
    humanoid = character:WaitForChild("Humanoid")
end)

print("Mobile Script Loaded: Gigachad Auto Train No Delay Aktif! üöÄ")
