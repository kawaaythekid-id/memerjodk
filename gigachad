-- Gigachad Simulator Mobile Ultimate Script (Android Optimized) by Grok (v1.0 - September 2025)
-- Fitur: Auto Train, Auto Rebirth, Auto Collect Pets, Auto Claim Gifts, Speed/Jump Boost
-- Optimized for mobile executors like Arceus X/Hydrogen

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- RemoteEvents (sesuaikan jika berbeda, ini contoh)
local remotes = ReplicatedStorage:WaitForChild("Remotes") -- Asumsi folder
local trainRemote = remotes:WaitForChild("Train")
local rebirthRemote = remotes:WaitForChild("Rebirth")
local collectPetRemote = remotes:WaitForChild("CollectPet")
local claimGiftRemote = remotes:WaitForChild("ClaimGift")

-- Config
local config = {
    autoTrain = true,
    autoRebirth = true,
    autoCollectPets = true,
    autoClaimGifts = true,
    speedBoost = 50,
    jumpBoost = 100
}

-- Simple GUI untuk Android
local screenGui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local title = Instance.new("TextLabel")
local toggleBtn = Instance.new("TextButton")

screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.IgnoreGuiInset = true -- Fullscreen friendly

frame.Parent = screenGui
frame.Size = UDim2.new(0, 200, 0, 300)
frame.Position = UDim2.new(0, 10, 0, 10)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.Visible = false

title.Parent = frame
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "Gigachad Mobile Hub"
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)

-- Toggle All Button (simpel untuk mobile)
toggleBtn.Parent = frame
toggleBtn.Size = UDim2.new(1, -20, 0, 40)
toggleBtn.Position = UDim2.new(0, 10, 0, 40)
toggleBtn.Text = "Toggle All: ON"
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
toggleBtn.TextScaled = true
toggleBtn.MouseButton1Click:Connect(function()
    config.autoTrain = not config.autoTrain
    config.autoRebirth = not config.autoRebirth
    config.autoCollectPets = not config.autoCollectPets
    config.autoClaimGifts = not config.autoClaimGifts
    toggleBtn.Text = "Toggle All: " .. (config.autoTrain and "ON" or "OFF")
end)

-- Auto Train
spawn(function()
    while true do
        if config.autoTrain and trainRemote then
            pcall(function()
                trainRemote:FireServer()
            end)
        end
        wait(0.2) -- Delay lebih panjang untuk stabilitas Android
    end
end)

-- Auto Rebirth
spawn(function()
    while true do
        if config.autoRebirth and rebirthRemote then
            local power = player.leaderstats.Power.Value
            if power >= 1000000 then
                pcall(function()
                    rebirthRemote:FireServer()
                end)
            end
        end
        wait(7) -- Delay lebih panjang
    end
end)

-- Auto Collect Pets
spawn(function()
    while true do
        if config.autoCollectPets and collectPetRemote then
            for _, pet in pairs(workspace.Pets:GetChildren()) do
                if pet:IsA("Model") and (pet.Position - character.HumanoidRootPart.Position).Magnitude < 50 then
                    pcall(function()
                        collectPetRemote:FireServer(pet.Name)
                    end)
                end
            end
        end
        wait(3)
    end
end)

-- Auto Claim Gifts
spawn(function()
    while true do
        if config.autoClaimGifts and claimGiftRemote then
            pcall(function()
                claimGiftRemote:FireServer("all")
            end)
        end
        wait(12)
    end
end)

-- Speed & Jump Boost
humanoid.WalkSpeed = config.speedBoost
humanoid.JumpPower = config.jumpBoost
RunService.Heartbeat:Connect(function()
    humanoid.WalkSpeed = config.speedBoost
    humanoid.JumpPower = config.jumpBoost
end)

-- Toggle GUI dengan tap (mobile-friendly)
local tapCount = 0
UserInputService.TouchTapInWorld:Connect(function()
    tapCount = tapCount + 1
    if tapCount >= 2 then -- Double tap
        frame.Visible = not frame.Visible
        tapCount = 0
    end
end)

print("Gigachad Mobile Hub Loaded! Double-tap to toggle GUI. Become the ultimate Chad! ðŸ’ª")
